{
  "tsserver": {
    "check.tscVersion": false, // Desactiva la comprobación de la versión de TypeScript
    "check.js": true, // Habilita la verificación de archivos JavaScript
    "check.npmScripts": true, // Habilita la verificación de scripts NPM
    "useBatch": true, // Habilita el uso de tsserver en modo batch
    "enable": true, // Habilita el servidor TypeScript
    "allFixes": true, // Aplica automáticamente todas las correcciones sugeridas
    "implicitProjectConfig.checkJs": true, // Habilita la comprobación de archivos JavaScript implícitos
    "workspaceSymbols.scope": "project" // Establece el ámbito de los símbolos de espacio de trabajo
  },
  "json": {
    "schemas": [
      {
        "fileMatch": ["*.json"], // Patrón de archivos JSON
        "url": "https://json.schemastore.org/schema.json", // URL del esquema JSON
        "priority": 1 // Prioridad del esquema
      }
    ]
  }
}

